.detailtabbar{
  width: 100vw;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  display: flex;
  background-color: #fff;
  margin-bottom: 10rpx;
}

.detailtabbar view{
  flex: 1;
}

.detailtabbar .active{
  border-bottom: 6rpx solid red;
}

.user{
  overflow: hidden;
  margin: 10rpx;
}

.user image{
  width: 100rpx;
  border-radius: 50%;
}

.user .left{
  float: left;
  height: 100rpx;
  line-height: 100rpx;
  
}

.user .right{
  float: right;
  height: 100rpx;
  line-height: 100rpx;
}

.content{
  padding: 20rpx;
}

.content image{
  width: 300rpx;
}

.bottom{
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  background-color: white;
  display: flex;
}

.bottom view{
  flex:1;
  color: white;
}